root = Tkinter.Tk()

eliza = Tkinter.Label(text = "Eliza", borderwidth = 10, font = "Arial 14")
display = Tkinter.Text(font = "Times 10")
user_entry = Tkinter.Entry()
send_button = Tkinter.Button(text = "Envoyer")#, command = user_entry.get)
quit_button = Tkinter.Button(text = "Quitter Eliza", command = root.destroy)


user_entry.config(width = 85) # user's entry
display.config(width = 100, height = 15) # displays Eliza's answer
display.insert("0.0", "Eliza: Bonjour, je suis Eliza. Que puis-je faire pour vous?")

send_button.config(state = Tkinter.NORMAL) # add in the function that will display Eliza's answer

eliza.grid()
display.grid()
user_entry.grid()

send_button.grid(row = 6, column = 0, sticky = "s" + "e")
quit_button.grid(row = 6, column = 0, sticky = "s" + "w")


def enter(event): # Missing: click on "Envoyer" case (needs to deal with both mouse and keyboard input)

import time
import random


def timeout_talk(): #will send a random element of the list after 100 secs. of inactivity
    lst = ["Ne voulez-vous pas m'en dire plus?" , "Etes-vous toujours l√†?" , "Si vous souhaitez de l'aide, il faut me parler!" , "Allons, dites-m'en encore un peu!"]
    i = random.randint(0, len(lst) - 1)  
    elem = lst[i] 
    print elem
       


def wait():
	time.sleep(2) # 2secs waiting time to simulate reflexion
	print "Hello" # this is a test. We will return Eliza's calculated reply instead



def timeout(): 	#timer: will call timeout_talk when reaching 100 secs
#!!! Plan a reset to zero whenever the user hits a key !!!
	count = 0
	while count != 100:
		time.sleep(1)
		count += 1
		if count == 100:
			timeout_talk()

  
print timeout()
print wait()
